{
  "name": "siri-shortcut-hk-bus-eta",
  "description": "Get Hong Kong public transport ETA",
  "engines": {
    "node": ">=22.0.0"
  },
  "type": "module",
  "scripts": {
    "dev": "npx wrangler pages dev ./public --port 8788 --binding ENVIRONMENT=DEV host=http://localhost:8788",
    "format": "prettier --write \"{functions,src}/**/*.{js,ts}\"",
    "generate-sitemap": "tsx src/generateSiteMap.ts",
    "test": "concurrently -n wrangler,jest --success first --kill-others \"npm:dev\" \"wait-on -t 2m http://localhost:8788 && npm run test-local\"",
    "test-local": "jest --ci --runInBand",
    "update-route": "tsx src/updateRoute.ts",
    "update-stop-name": "tsx src/updateStopName.ts",
    "update-spatial": "tsx src/updateSpatial.ts",
    "web-start": "vite dev",
    "web-build": "vite build"
  },
  "dependencies": {
    "bootstrap": "^5.3.8",
    "dayjs": "^1.11.19",
    "sass": "^1.94.2",
    "sortablejs": "^1.15.6",
    "vite": "^7.2.7"
  },
  "devDependencies": {
    "@actions/core": "^1.11.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.10.1",
    "@types/node-fetch": "^2.6.13",
    "@types/proj4": "^2.5.6",
    "@types/xml": "^1.0.11",
    "concurrently": "^9.2.1",
    "csv-parse": "^6.1.0",
    "eslint-config-prettier": "^10.1.8",
    "gdal-async": "^3.11.5",
    "jest": "^29.7.0",
    "node-fetch": "^2.7.0",
    "prettier": "^3.7.4",
    "proj4": "^2.20.2",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "vite-plugin-purgecss-updated-v5": "^1.2.6",
    "wait-on": "^9.0.3",
    "wrangler": "^4.51.0",
    "xml": "^1.0.1",
    "xml2js": "^0.6.2"
  }
}
